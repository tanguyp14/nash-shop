<script>
  document.addEventListener('DOMContentLoaded', function () {
    AOS.init();
  });
</script>

<footer class="tylt_custom_footer">
  <section class="tylt_custom_footer__top">
    <div class="tylt_custom_footer__social">
      {% if settings.instagram_url != blank %}
        <a
          href="{{ settings.instagram_url }}"
          target="_blank"
          rel="noopener"
          class="tylt_custom_footer__social-link tylt_custom_footer__social-link--instagram"
        >
          <span class="icon-instagram" aria-hidden="true"></span>
          <span class="visually-hidden">Instagram</span>
        </a>
      {% endif %}
      {% if settings.snapchat_url != blank %}
        <a
          href="{{ settings.snapchat_url }}"
          target="_blank"
          rel="noopener"
          class="tylt_custom_footer__social-link tylt_custom_footer__social-link--snapchat"
        >
          <span class="icon-snapchat" aria-hidden="true"></span>
          <span class="visually-hidden">Snapchat</span>
        </a>
      {% endif %}
    </div>
  </section>
  <section
    class="tylt_custom_footer__middle"
    style="background-image: url('{{ section.settings.image-bg-middle | image_url }}');"
  >
    <div class="tylt_custom_footer__images">
      {% if section.settings.image_mid != blank %}
        <img
          src="{{ section.settings.image_mid | image_url }}"
          alt="Image Mid"
          class="tylt_custom_footer__image tylt_custom_footer__image--mid"
        >
      {% endif %}
    </div>
  </section>
  <section class="tylt_custom_footer__bottom">
    <div class="tylt_custom_footer__copyright">
      &copy; {{ 'now' | date: '%Y' }}
      {{ shop.name }} - Tous droits réservés
      <span class="tylt_custom_footer__dev">
        - Site développé par <a href="https://le-tengu.fr" target="_blank" rel="noopener">A3PROD</a> -&nbsp;
      </span>
    </div>
    {% if section.settings.menu != blank %}
      <nav class="tylt_custom_footer__nav">
        <ul>
          {% for link in linklists[section.settings.menu].links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    {% endif %}
  </section>
</footer>

{% schema %}
{
  "name": "TYLT - Footer",
  "presets": [
    {
      "name": "TYLT - Footer"
    }
  ],
  "settings": [
    {
      "type": "image_picker",
      "id": "image-bg-middle",
      "label": "Image de fond (section milieu)"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu du footer"
    },
    {
      "type": "image_picker",
      "id": "image_mid",
      "label": "Image Avant - Mid"
    }
  ]
}
{% endschema %}
