<script>
  document.addEventListener('DOMContentLoaded', function () {
    AOS.init();
  });
</script>

<footer class="tylt_custom_footer">
  <section class="tylt_custom_footer__top">
    <div class="tylt_custom_footer__top__logo">
      <img src="{{ section.settings.logo_left |  img_url: 'master'  }}" alt="Logo">
    </div>
    <div class="tylt_custom_footer__top__social">
      <a
        href="{{ settings.social_instagram_link }}"
        target="_blank"
        rel="noopener"
        class="icon_insta"
        aria-label="Instagram"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M12 7.2A4.8 4.8 0 1 0 12 16.8A4.8 4.8 0 1 0 12 7.2Z" stroke="currentColor" stroke-width="1.5"/>
          <rect x="3" y="3" width="18" height="18" rx="5" stroke="currentColor" stroke-width="1.5"/>
          <circle cx="17.5" cy="6.5" r="1" fill="currentColor"/>
        </svg>
      </a>
      <a
        href="{{ settings.social_snapchat_link }}"
        target="_blank"
        rel="noopener"
        class="icon_twitch"
        aria-label="Twitch"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M4 4L4 20L8 20L8 22L12 22L12 20L16 20L20 16L20 4L4 4Z" stroke="currentColor" stroke-width="1.5"/>
          <rect x="8" y="8" width="2" height="5" fill="currentColor"/>
          <rect x="14" y="8" width="2" height="5" fill="currentColor"/>
        </svg>
      </a>
    </div>
  </section>
  <section
    class="tylt_custom_footer__middle"
    style="background-image: url('{{ section.settings.image-bg-middle | image_url }}');"
  >
    <div class="tylt_custom_footer__images">
      {% if section.settings.image_mid != blank %}
        <img
          src="{{ section.settings.image_mid | image_url }}"
          alt="Image Mid"
          class="tylt_custom_footer__image tylt_custom_footer__image--mid"
        >
      {% endif %}
    </div>
  </section>
  <section class="tylt_custom_footer__bottom">
    <div class="tylt_custom_footer__copyright">
      &copy; {{ 'now' | date: '%Y' }}
      {{ shop.name }} - Tous droits réservés
      <span class="tylt_custom_footer__dev">
        - Site développé par <a href="https://le-tengu.fr" target="_blank" rel="noopener">A3PROD</a> -&nbsp;
      </span>
    </div>
    {% if section.settings.menu != blank %}
      <nav class="tylt_custom_footer__nav">
        <ul>
          {% for link in linklists[section.settings.menu].links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    {% endif %}
  </section>
</footer>

{% schema %}
{
  "name": "TYLT - Footer",
  "presets": [
    {
      "name": "TYLT - Footer"
    }
  ],
  "settings": [
    {
      "type": "image_picker",
      "id": "image-bg-middle",
      "label": "Image de fond (section milieu)"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu du footer"
    },
    {
      "type": "image_picker",
      "id": "logo_left",
      "label": "Image Top left"
    },
    {
      "type": "image_picker",
      "id": "image_mid",
      "label": "Image Avant - Mid"
    }
  ]
}
{% endschema %}
