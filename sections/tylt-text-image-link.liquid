{% schema %}
{
  "name": "TYLT - TextMedLink",
  "settings": [
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Zone de texte"
    },
    {
      "type": "image_picker",
      "id": "background",
      "label": "Images Back"
    },
    {
      "type": "video",
      "id": "video",
      "label": "A Shopify-hosted video"
    },
    {
      "type": "select",
      "id": "reseau",
      "label": "Plateforme",
      "options": [
        {
          "value": "instagram",
          "label": "Instagram"
        },
        {
          "value": "tiktok",
          "label": "TikTok"
        },
        {
          "value": "both",
          "label": "Les deux"
        }
      ],
      "default": "both"
    },

    {
      "type": "text",
      "id": "button_text",
      "label": "Lien"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Lien"
    }
  ],
  "presets": [
    {
      "name": "TYLT - TextMedLink"
    }
  ]
}
{% endschema %}

<section class="tylt_text_img_link">
  <div data-aos="fade-left" class="tylt_text_img_link__image">
    {% if section.settings.background != blank %}
      <img
        class="card"
        src="{{ section.settings.background | image_url }}"
        alt="Image de fond"
        width="100%"
        height="auto"
        style="object-fit: cover;"
      >
    {% endif %}
    {% if section.settings.video != blank %}
      {{ section.settings.video | video_tag: class: 'card', autoplay: true, loop: true, muted: true, controls: true }}
    {% endif %}
  </div>
  <div class="tylt_text_img_link__text">
    <span data-aos="fade-right" class="tylt_text_img_link__text__container">
      {{ section.settings.paragraph }}
    </span>
    <a
      href="{{ section.settings.button_link }}"
      class="tylt_text_img_link__text__button"
      alt="RS PAIHEME"
      target="_blank"
      aria-label="RÃ©seaux sociaux PAIHEME"
    >
      {% case section.settings.reseau %}
        {% when 'instagram' %}
          {{- 'icon_instagram.svg' | inline_asset_content -}}
        {% when 'tiktok' %}
          {{- 'icon_tiktok.svg' | inline_asset_content -}}
        {% when 'both' %}
          {{- 'icon_tiktok.svg' | inline_asset_content -}}
          {{- 'icon_instagram.svg' | inline_asset_content -}}
      {% endcase %}
      {{ section.settings.button_text }}
    </a>
  </div>
</section>

<script>
  var limits = 15.0;

  $('.tylt_text_img_link .card').mousemove(function (e) {
    var rect = e.target.getBoundingClientRect();
    var x = e.clientX - rect.left; //x position within the element.
    var y = e.clientY - rect.top; //y position within the element.
    var offsetX = x / rect.width;
    var offsetY = y / rect.height;

    var rotateY = offsetX * (limits * 2) - limits;
    var rotateX = offsetY * (limits * 2) - limits;

    var shadowOffsetX = offsetX * 32 - 16;
    var shadowOffsetY = offsetY * 32 - 16;

    $(this).css({
      'box-shadow':
        (1 / 6) * -shadowOffsetX +
        'px ' +
        (1 / 6) * -shadowOffsetY +
        'px 3px rgba(0, 0, 0, 0.041), ' +
        (2 / 6) * -shadowOffsetX +
        'px ' +
        (2 / 6) * -shadowOffsetY +
        'px 7.2px rgba(0, 0, 0, 0.058), ' +
        (3 / 6) * -shadowOffsetX +
        'px ' +
        (3 / 6) * -shadowOffsetY +
        'px 13.6px rgba(0, 0, 0, 0.072), ' +
        (4 / 6) * -shadowOffsetX +
        'px ' +
        (4 / 6) * -shadowOffsetY +
        'px 24.3px rgba(0, 0, 0, 0.086), ' +
        (5 / 6) * -shadowOffsetX +
        'px ' +
        (5 / 6) * -shadowOffsetY +
        'px 45.5px rgba(0, 0, 0, 0.103), ' +
        -shadowOffsetX +
        'px ' +
        -shadowOffsetY +
        'px 109px rgba(0, 0, 0, 0.144)',
      transform: 'perspective(1000px) rotateX(' + -rotateX + 'deg) rotateY(' + rotateY + 'deg)',
    });
  });

  $('.tylt_text_img_link .card').mouseleave(function (e) {
    $('.tylt_text_img_link .card').css({
      'box-shadow':
        '0px 0px 3px rgba(0, 0, 0, 0.041), 0px 0px 7.2px rgba(0, 0, 0, 0.058), 0px 0px 13.6px rgba(0, 0, 0, 0.086), 0px 0px 24.3px rgba(0, 0, 0, 0.107), 0px 0px 45.5px rgba(0, 0, 0, 0.103), 0px 0px 109px rgba(0, 0, 0, 0.144)',
      transform: 'scale(1.0) rotate()-2deg)',
    });
  });
</script>
